<Window x:Class="Noteslider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Noteslider"
        mc:Ignorable="d"
        Title="Noteslider" Height="450" Width="800"        
        MinWidth="800"
        MinHeight="450" Icon="Logo64.png"
        WindowStartupLocation="CenterScreen"
        >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/StyleBase.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <StackPanel 
            x:Name="MainWindowMenu" Grid.Row="0"
            HorizontalAlignment="Center" MaxHeight="100"
            Orientation="Horizontal"
            >
            <Button x:Name="MainWindowMenuNewTrackButton" Background="#00000000">
                <Image Source="/Noteslider;component/Resources/IcoNew.png"/>
            </Button>
            <Button x:Name="MainWindowMenuOpenTrackButton" Background="#00000000">
                <Image Source="/Noteslider;component/Resources/IcoOpen.png"/>
            </Button>
            <Button x:Name="MainWindowMenuPlayButton" Background="#00000000">
                <Image x:Name="MainWindowMenuPlayButtonImg" Source="/Noteslider;component/Resources/IcoPlay.png"/>
            </Button>
            <Button x:Name="MainWindowMenuSettingsButton" Background="#00000000">
                <Image Source="/Noteslider;component/Resources/IcoSettings.png"/>
            </Button>
        </StackPanel>
        <DockPanel Grid.Row="1" LastChildFill="True">

            <DockPanel x:Name="LeftPanel" MinWidth="150" DockPanel.Dock="Left"  LastChildFill="True">
                <Button x:Name="ButtonHideLeftPanel" DockPanel.Dock="Right" Content="&lt;"/>
                <TabControl x:Name="MWLeftPanelTabControl" DockPanel.Dock="Left" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="1">
                    <TabItem x:Name="MWTabItemMain" Header="Main" Background="Blue">
                        <Label Content="Content goes here..." />
                    </TabItem>
                    <TabItem x:Name="MWTabItemTracks" Header="Tracks" />
                    <TabItem x:Name="MWTabItemTags" Header="Tags" />
                </TabControl>
            </DockPanel>

            <DockPanel x:Name="RightPanel" MinWidth="150" DockPanel.Dock="Right" LastChildFill="True">
                <Button x:Name="ButtonHideRightPanel" Content="&gt;" DockPanel.Dock="Left"/>
                <StackPanel x:Name="MWRightPanelStackPanel" DockPanel.Dock="Right" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <GroupBox Header="Info" Margin="5" BorderBrush="Black">
                        <Image>
                        </Image>
                    </GroupBox>
                    <GroupBox Header="Tags">

                    </GroupBox>
                    <Label Content="Speed"/>
                    <Slider x:Name="SpeedSlider" Value="1"/>
                </StackPanel>
            </DockPanel>

            <ScrollViewer DockPanel.Dock="Left"
            x:Name="ScrollViewer"
            VerticalScrollBarVisibility="Auto" 
            HorizontalScrollBarVisibility="Auto" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Margin="5">
                <StackPanel x:Name="MainWindowNotePanel" VerticalAlignment="Top" HorizontalAlignment="Center">

                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>

