<Window x:Class="Noteslider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Noteslider"
        mc:Ignorable="d"
        Title="Noteslider" Height="450" Width="800" Background="#FF2C2C2C"        
        MinWidth="800"
        MinHeight="450"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="100" Height="15*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="300" Width="20*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition MaxWidth="300" Width="20*"/>
        </Grid.ColumnDefinitions>

        <DockPanel x:Name="MainWindowMenu" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Margin="5">

            <Button x:Name="MainWindowMenuNewTrackButton" Background="#00000000">
                <Image Source="C:/Projekty/.NET/Noteslider/Noteslider/icons/IcoNew.png"/>
            </Button>
            <Button x:Name="MainWindowMenuOpenTrackButton" Background="#00000000">
                <Image Source="C:/Projekty/.NET/Noteslider/Noteslider/icons/IcoOpen.png"/>
            </Button>
            <Button x:Name="MainWindowMenuPlayButton" Background="#00000000">
                <Image Source="C:/Projekty/.NET/Noteslider/Noteslider/icons/IcoPlay.png"/>
            </Button>
            <Button x:Name="MainWindowMenuSettingsButton" Background="#00000000">
                <Image Source="C:/Projekty/.NET/Noteslider/Noteslider/icons/IcoSettings.png"/>
            </Button>

        </DockPanel>

        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="1">
            <TabItem Header="General">
                <Label Content="Content goes here..." />
            </TabItem>
            <TabItem Header="Security" />
            <TabItem Header="Details" />
        </TabControl>

        <ScrollViewer 
            VerticalScrollBarVisibility="Auto" 
            HorizontalScrollBarVisibility="Disabled" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Grid.Column="1" Grid.Row="1" 
            Margin="5">
            <StackPanel x:Name="MainWindowNotePanel" VerticalAlignment="Top" HorizontalAlignment="Center">

            </StackPanel>
        </ScrollViewer>

        
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="1">
            <GroupBox Header="Info" Margin="5" BorderBrush="Black">
                <Image Source="C:/Projekty/.NET/Noteslider/Noteslider/icons/testImg.jpg">
                </Image>                
            </GroupBox>
            <GroupBox Header="Tags">

            </GroupBox>
        </StackPanel>

        <Menu Margin="0,0,0,391" Grid.ColumnSpan="2" Background="#FF424242">
            
        </Menu>

    </Grid>
</Window>
